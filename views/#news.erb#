		<% if n % 3 == 0 %>
			<div class="row">
		<% end %>
   	<a href="/news/<%=newsitem.id%>" class="news">
		<div class="col-sm-4">
			<article class="newsitem">
				<header>
					<h2><%= newsitem.heading.gsub(/_/, " ") %></h2>
					<h3 class="date"><%= newsitem.date.strftime("%-e/%-m")%></h3>
				</header>
